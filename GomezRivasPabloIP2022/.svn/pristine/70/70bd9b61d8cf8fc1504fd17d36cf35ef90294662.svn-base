package org.ip.sesion02;

public class TarifaTaxi {

	public static void main(String[] args) {

int km = 101;
double importe;
if (km<=30) {
	importe = 18;
}
else {
	if (km<=100) {
		importe = 18 + 0.85 * (km - 30);
	}
	else {
		importe = 18 + 0.85 * 70 + 0.65 * (km - 100);
		}
	}
System.out.println("CALCULO TARIFA TAXI");
System.out.println();
System.out.println("Kilometros recorridos => " + km);
System.out.print("El importe total a pagar es ");
System.out.printf("%.2f", (importe));
}
}
