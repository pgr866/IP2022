package org.ip.sesion02;

public class OperacionAritmetica {

	public static void main(String[] args) {

int x = 7, y = 2;
char op = '/';

System.out.println("Los datos son:");
System.out.println("x = " + x + ", y = " + y);
System.out.println("La operaci√≥n elegida es: " + op);
System.out.println();

switch (op) {
	case '+' :
		System.out.println("El resultado de la operacion es: " + x + " " + op + " " + y + " = " + (x + y));
		break;
	case '-' :
		System.out.println("El resultado de la operacion es: " + x + " " + op + " " + y + " = " + (x - y));
		break;
	case '*' :
		System.out.println("El resultado de la operacion es: " + x + " " + op + " " + y + " = " + (x * y));
		break;
	case '/' :
		System.out.println("El resultado de la operacion es: " + x + " " + op + " " + y + " = " + ((double) x) / ((double) y));
		break;
}
	}
}
